<div class="form_inner max_width">
  <h2 class="form_title">New Board</h2>
  <div class="boards_new_container">
    <%= form_with model: @board, url: boards_path,  method: 'post', local: true do |f| %>
      <div class="field">
        <%= f.label :name, "タイトル", class: "form_label" %>
        <%= f.text_field :name, class: "form_input" %>
      </div>
      <div class="field">
        <%= f.label :description, "内容", class: "form_label" %>
        <%= f.text_area :description, class: "form_input form_input_textArea" %>
      </div>
      <div class="actions">
        <%= f.submit "追加する" %>
      </div>
    <% end %>
  </div>
  <%= link_to "ボード一覧へ戻る", boards_path,  class: "back_link"%>
</div>