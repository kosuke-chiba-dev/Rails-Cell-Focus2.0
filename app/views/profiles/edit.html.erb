<div class="form_inner max_width">
  <h2 class="form_title">Edit Profile</h2>
  <div class="boards_new_container">
    <%= form_with model: @profile, url: profile_path,  method: 'put', html: { multipart: true },  local: true do |f| %>
      <div class="field">
        <%= f.label :nickname, "ニックネーム", class: "form_label" %>
        <%= f.text_field :nickname, class: "form_input" %>
      </div>
      <div class="field">
        <%= f.label :birthday, "誕生日", class: "form_label" %>
        <%= f.date_field :birthday, max: Date.current,  class: "form_input form_input_textArea" %>
      </div>
      <div class="field">
        <%= f.label :avatar, "アバター画像", class: "form_label" %>
        <%= f.file_field :avatar %>
      </div>
      <div class="actions">
        <%= f.submit "編集する" %>
      </div>
    <% end %>
  </div>
  <%= link_to "プロフィールへ戻る", profile_path,  class: "back_link"%>
</div>