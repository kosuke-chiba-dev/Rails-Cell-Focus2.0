<% if resource.errors.any? %>
  <div class="flash-container" data-turbo-cache="false" role="status" aria-live="polite">
    <!-- 見出し（トースト1個） -->
    <div class="flash">
      <%= I18n.t(
            "errors.messages.not_saved",
            count: resource.errors.count,
            resource: resource.class.model_name.human.downcase
          ) %>
    </div>

    <!-- 詳細（箇条書きトースト） -->
    <ul class="flash flash--descriptions">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
