<div class="form_inner">
  <h2 class="form_title">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "form_label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input" %>
    </div>
    <div class="field">
      <%= f.label :password , class: "form_label"%><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form_input" %>
    </div>
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
  <%= link_to "会員登録", new_user_registration_path, class: "bottom_link"%>
</div>
