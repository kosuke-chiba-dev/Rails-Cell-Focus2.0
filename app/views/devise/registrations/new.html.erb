<div class="form_inner">
  <h2 class="form_title">会員登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, "Eメール", class: "form_label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input" %>
    </div>
    <div class="field">
      <%= f.label :password, "パスワード", class: "form_label" %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form_input" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "パスワード (確認)", class: "form_label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_input" %>
    </div>
    <div class="actions">
      <%= f.submit "登録" %>
    </div>
  <% end %>
  <%= link_to "ログイン", new_user_session_path, class: "bottom_link"%>
</div>
